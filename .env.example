# RainbowKit / wagmi
# Set your WalletConnect Cloud project ID. If left blank, app falls back to injected/Coinbase-only wallets.
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=
NEXT_PUBLIC_ENABLE_TESTNETS=false
NEXT_PUBLIC_BASE_CHAIN_ID=8453
BASE_RPC_URL=https://mainnet.base.org

# AI (FLock / Qwen)
# Used as x-litellm-api-key for chat/completions or x-api-key for conversational endpoints
FLOCK_API_KEY=sk-your-flock-key
FLOCK_MODEL=qwen2-72b-instruct
FLOCK_API_URL=https://api.flock.io/v1/chat/completions
ASK_AI_DAILY_LIMIT=10

# Data sources
# Leave unset to use the live Gamma events API (recommended). Override only if you need a proxy.
# POLYMARKET_API_BASE=https://gamma-api.polymarket.com

# Realtime WS (disabled locally by default)
POLYMARKET_WS_ENABLED=false
# POLYMARKET_WS_URL=wss://ws-live-data.polymarket.com

# Notifications (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
EMAIL_WEBHOOK_URL=
EMAIL_WEBHOOK_TOKEN=
FC_WEBHOOK_URL=
FC_WEBHOOK_TOKEN=

# SQLite
SQLITE_DATA_DIR=./data
SQLITE_DB_PATH=./data/app.db
DATABASE_URL="file:./data/app.db"
APP_BASE_URL=http://localhost:3000

# Moderation token
CONTRIBUTION_ADMIN_TOKEN=your-shared-admin-token
