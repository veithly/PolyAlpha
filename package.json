{
  "name": "polyalpha-app",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "vercel-build": "prisma generate && next build",
    "build:mini": "npm run lint && npm run test && npm run build",
    "cf:build": "npx @cloudflare/next-on-pages",
    "cf:dev": "npm run cf:build && wrangler pages dev .vercel/output --compatibility-date=2024-09-02 --d1 DB",
    "cf:deploy": "npm run cf:build && wrangler pages deploy .vercel/output",
    "cf:build:worker": "opennextjs-cloudflare build",
    "cf:deploy:worker": "npm run cf:build:worker && wrangler deploy --config wrangler.worker.toml",
    "analyze": "cross-env ANALYZE=true next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest --run",
    "test:e2e": "playwright test",
    "cron:push": "tsx scripts/jobs/pushHot.ts",
    "jobs:snapshot": "cross-env NODE_ENV=production tsx scripts/jobs/cacheMarkets.ts"
  },
  "dependencies": {
    "@prisma/adapter-d1": "^7.0.1",
    "@prisma/client": "^5.19.1",
    "@rainbow-me/rainbowkit": "^2.2.9",
    "@react-native-async-storage/async-storage": "^1.24.0",
    "@tanstack/react-query": "^5.55.3",
    "dotenv": "^16.4.5",
    "next": "^15.3.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^9.0.1",
    "recharts": "^3.4.1",
    "remark-gfm": "^4.0.0",
    "viem": "2.39.3",
    "wagmi": "^2.17.4"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@cloudflare/workers-types": "^4.20251127.0",
    "@next/bundle-analyzer": "^16.0.3",
    "@opennextjs/cloudflare": "^1.13.1",
    "@playwright/test": "^1.49.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.14.8",
    "@types/react": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "cross-env": "^10.1.0",
    "eslint-config-next": "^15.1.7",
    "jsdom": "^27.2.0",
    "pino-pretty": "^13.1.2",
    "prisma": "^5.19.1",
    "tsx": "^4.7.0",
    "typescript": "5.5.4",
    "vercel": "^47.0.4",
    "vitest": "^4.0.10",
    "wrangler": "^4.51.0"
  },
  "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b"
}
